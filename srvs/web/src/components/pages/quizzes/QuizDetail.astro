---
import { ArrowRight } from "@lucide/astro";

import type { QuizExpand } from "@quizbee/pb-types";

import Root from "@/layouts/Root.astro";
import QuizOwnerControls from "@/components/quizes/QuizOwnerControls.svelte";
import { pb, urlWithPR } from "@/lib";
import { useTranslatedPath } from "@/i18n/utils";
import { defaultLang, type languages } from "@/i18n/ui";
import type { QuizesResponse } from "@quizbee/pb-types";

const { quizSlugOrId, category } = Astro.params as {
  quizSlugOrId: string;
  category: string;
};

const { locale = defaultLang } = Astro.params as {
  locale?: keyof typeof languages;
};

let quiz: QuizesResponse;
try {
  quiz = await pb
    .collection("quizes")
    .getFirstListItem(
      `(slug = "${quizSlugOrId}" || id = "${quizSlugOrId}") && (visibility = "public" || visibility = "search") && (category = "${category}")`,
      { expand: "quizItems_via_quiz", sort: "quizItems_via_quiz.order" }
    );
} catch {
  const redirectPath =
    locale === defaultLang
      ? `/quizes/${category}`
      : `/${locale}/quizes/${category}`;
  return Astro.redirect(redirectPath, 302);
}
const items = (quiz.expand as QuizExpand)!.quizItems_via_quiz || [];

const jsonLd = {
  "@context": "https://schema.org",
  "@type": "Quiz",
  name: quiz.title,
  description: quiz.summary || "",
  numberOfQuestions: items.length,
};

const tp = useTranslatedPath(locale);

const appUrl = urlWithPR(import.meta.env.PUBLIC_APP_URL);
const quizUrl = `${appUrl}quizes/${quizSlugOrId}?forceStart=true`;
---

<Root
  title={quiz.title}
  description={quiz.summary ||
    `Interactive quiz with ${items.length} questions`}
  active="quizes"
  structuredData={jsonLd}
>
  <div class="mx-auto max-w-4xl px-4 sm:px-6 lg:px-8 py-8 md:py-12">
    <!-- HEADER -->
    <header class="mb-10">
      <nav class="text-sm text-muted-foreground mb-6">
        <a href={tp("/quizes")} class="hover:text-foreground transition-colors"
          >Quizzes</a
        >
        <span class="mx-2">/</span>
        <a
          href={tp(`/quizes/${category}`)}
          class="hover:text-foreground transition-colors capitalize"
        >
          {category}
        </a>
      </nav>

      <QuizOwnerControls
        client:load
        quizId={quiz.id}
        authorId={quiz.author}
        initialTitle={quiz.title}
        isArchived={quiz.archived || false}
      />

      <h1 class="text-3xl md:text-4xl font-bold tracking-tight mb-4">
        {quiz.title}
      </h1>

      {
        quiz.summary && (
          <p class="text-base text-muted-foreground leading-relaxed mb-6 line-clamp-2">
            {quiz.summary}
          </p>
        )
      }

      <div class="flex flex-col sm:flex-row sm:items-center gap-4 mb-6">
        <a
          target="_blank"
          href={quizUrl}
          class="btn btn-primary btn-lg px-6 py-3 font-semibold shadow-lg hover:shadow-xl transition-all group shrink-0"
        >
          Start Quiz
          <ArrowRight
            size={20}
            class="group-hover:translate-x-1 transition-transform"
          />
        </a>

        <div class="flex flex-wrap items-center gap-2">
          {
            quiz.difficulty && (
              <span class="badge badge-soft badge-info capitalize text-xs">
                {quiz.difficulty}
              </span>
            )
          }
          <span class="badge badge-soft badge-neutral text-xs">
            {items.length}
            {items.length === 1 ? " question" : " questions"}
          </span>
        </div>
      </div>

      {
        quiz.tags && Array.isArray(quiz.tags) && quiz.tags.length > 0 && (
          <div class="flex flex-wrap gap-2">
            {quiz.tags.map((tag: string) => (
              <span class="text-xs text-muted-foreground bg-muted/50 px-3 py-1 rounded-full">
                #{tag}
              </span>
            ))}
          </div>
        )
      }
    </header>

    <!-- QUESTIONS PREVIEW -->
    <section>
      <div class="mb-6">
        <h2 class="text-xl font-semibold mb-1">Questions Preview</h2>
        <p class="text-sm text-muted-foreground">
          Get a glimpse of what you'll be answering
        </p>
      </div>

      <div class="space-y-3">
        {
          items.map((item: any, index: number) => (
            <a
              target="_blank"
              href={quizUrl}
              class="group block rounded-xl bg-card p-5 hover:bg-muted/30 transition-colors no-underline"
            >
              <div class="flex items-start gap-4">
                <div class="shrink-0 w-8 h-8 rounded-lg bg-primary/10 text-primary flex items-center justify-center font-semibold text-sm group-hover:bg-primary/20 transition-colors">
                  {index + 1}
                </div>
                <div class="flex-1 min-w-0">
                  <h3 class="font-medium text-base leading-snug mb-3 group-hover:text-primary transition-colors">
                    {item.question}
                  </h3>
                  {item.answers && Array.isArray(item.answers) && (
                    <div class="space-y-1.5">
                      {item.answers.slice(0, 4).map((answer: any) => (
                        <div class="flex items-center gap-2.5 py-1.5">
                          <div class="w-3 h-3 rounded-full bg-muted-foreground/20 group-hover:bg-primary/20 transition-colors" />
                          <span class="text-sm text-muted-foreground group-hover:text-foreground transition-colors line-clamp-1">
                            {answer.content || "Answer option"}
                          </span>
                        </div>
                      ))}
                    </div>
                  )}
                </div>
              </div>
            </a>
          ))
        }
      </div>
    </section>
  </div>
</Root>
