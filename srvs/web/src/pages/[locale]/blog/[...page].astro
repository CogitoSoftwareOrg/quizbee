---
import type { Page } from "astro";

import BlogIndex from "@/components/pages/blog/BlogIndex.astro";
import { getStaticBlogLocalePaths } from "@/ssg/blog";

type CatInfo = {
  name: string;
  count: number;
  cover?: string | null;
  description?: string | null;
};

export const getStaticPaths = getStaticBlogLocalePaths;

const { page, categories } = Astro.props as {
  page: Page;
  categories: CatInfo[];
};
---

<BlogIndex page={page} categories={categories} />
