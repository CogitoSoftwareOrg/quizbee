---
import { getLangFromUrl } from "@/i18n/utils";
import "@/styles/global.css";

import ThemeLoad from "@/components/features/ThemeLoad.astro";
import ThemeController from "@/components/features/ThemeController.svelte";

const { title } = Astro.props;

const lang = getLangFromUrl(Astro.url);
---

<!doctype html>
<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/honey.svg" />
    <link
      rel="preload"
      as="font"
      href="/fonts/League_Spartan/LeagueSpartan-VariableFont_wght.ttf"
      type="font/ttf"
    />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <ThemeLoad />
    <ThemeController client:load />
    <slot />
  </body>
</html>
