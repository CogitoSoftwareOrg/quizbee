  "chart-mixed": ChartNoAxesCombined,
  robot: Bot2,
  "credit-card": CreditCard,
  star: Star,
  cloud: Cloud,
  mobile: Smartphone,
  users: Users,
  grid: LayoutGrid,
  "file-chart": FileChartColumnIncreasing,
  envelope: Mail,
  flask: FlaskConical,
  user: User,
  location: MapPin,
  webhook: Webhook,
  database: Database,
  code: Code,
  graph: Network,
  book: Book,
  "file-doc": FileCode,
  check: Check,
  clock: Clock,
  brain: Brain,
  calendar: Calendar,
  bell: BellRing,
  fire: Flame,
  list: ListTodo,
  tools: Wrench,
  cart: ShoppingCart,
  "user-minus": UserMinus,
  file: FileSpreadsheet,
  map: Map,
  hand: Hand,
  shield: Shield,
  "book-open-text": BookOpenText,
  "file-stack": FileStack,
  "message-circle-x": MessageCircleX,
  "frown": Frown,

};

const IconComponent = iconMap[name];
---

{IconComponent && <IconComponent size={size} class={className} />}
