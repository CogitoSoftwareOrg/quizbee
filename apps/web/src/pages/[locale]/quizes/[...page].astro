---
import type { GetStaticPaths, Page } from "astro";
import { getStaticQuizLocalePaths } from "@/ssg/quizes";
import QuizIndex from "@/components/pages/quizzes/QuizIndex.astro";

type CatInfo = {
  name: string;
  count: number;
};

export const getStaticPaths = getStaticQuizLocalePaths;

const { page, categories } = Astro.props as {
  page: Page;
  categories: CatInfo[];
};
---

<QuizIndex page={page} categories={categories} />
